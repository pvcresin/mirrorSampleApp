{
  "name": "mirrorSampleApp",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015-riot": "^1.1.0",
    "file-loader": "^1.1.5",
    "font-awesome": "^4.7.0",
    "font-awesome-webpack": "^0.0.5-beta.2",
    "less": "^2.7.3",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "postcss-simple-vars": "^4.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "tag-pug-loader": "^1.0.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.4.1"
  },
  "dependencies": {
    "riot": "^3.7.4",
    "webrtc-adapter": "^6.0.3"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:js": "webpack",
    "build:pug": "pug src/index.pug -o dist/ -P",
    "build:postcss": "postcss src/*.css -d dist/ --no-map -u postcss-import postcss-simple-vars postcss-cssnext",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "npm run build:js -- -w",
    "watch:pug": "npm run build:pug -- -w",
    "watch:postcss": "npm run build:postcss -- -w",
    "watch:browser": "live-server dist --watch=/"
  }
}
