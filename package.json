{
  "name": "mirrorSampleApp",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "postcss-simple-vars": "^4.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^3.4.1",
    "webrtc-adapter": "^6.0.3"
  },
  "dependencies": {},
  "scripts": {
    "build:js": "webpack",
    "build:pug": "pug src/pug/index.pug -o dist/ -P",
    "build:postcss": "postcss src/postcss/*.css -d dist/css/ --no-map -u postcss-import postcss-simple-vars postcss-cssnext",
    "build": "npm-run-all build:*",
    "watch:js": "npm run build:js -- -w",
    "watch:pug": "npm run build:pug -- -w",
    "watch:postcss": "npm run build:postcss -- -w",
    "watch:browser": "browser-sync start -s dist -f dist/**/*",
    "watch": "npm-run-all -p watch:*"
  }
}
